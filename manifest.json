{
  "name": "Dark.mode",
  "description": "Тёмный режим для любой странице",
  "icons": {
    "16": "/images/icon.png",
    "32": "/images/icon.png",
    "48": "/images/icon.png",
    "128": "/images/icon.png"
  },
  "version": "1.0.0",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "popup.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Dark.mode",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/icon.png",
      "32": "/images/icon.png",
      "48": "/images/icon.png",
      "128": "/images/icon.png"
    }

  },
  "permissions": [
    "https://*/*",
    "http://*/",
    "tabs"
  ]
}
