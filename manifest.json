{
  "name": "Dark.mode",
  "description": "Тёмный режим для любого сайта",
  "icons": {
    "16": "/images/icon.png",
    "32": "/images/icon.png",
    "48": "/images/icon.png",
    "128": "/images/icon.png"
  },
  "version": "1.0.1",
  "manifest_version": 3,
  "action": {
    "default_title": "Dark.mode",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/icon.png",
      "32": "/images/icon.png",
      "48": "/images/icon.png",
      "128": "/images/icon.png"
    }

  },
  "permissions": ["storage", "activeTab", "scripting", "tabs"]
}
